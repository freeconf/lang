func (e *MetaEncoder) encodeListKeys(l *meta.List) []string {
    idents := make([]string, len(l.KeyMeta()))
    for i, k := range l.KeyMeta() {
        idents[i] = k.Ident()
    }
    return idents
}

func (e *MetaEncoder) Encode(from *meta.Module) *pb.Module {
    return e.encodeModule(nil, from)
}
